<delegatedadmin>
<!--  EXECUTE INITIAL SET OF COMMANDS AS USER1 -->
	<command>
		<name>registerUserKeys</name>
		<parameters>
			<item getparam="true">
			    <name>id</name>
				<param>userid1</param>
			</item>
		</parameters>
		<returnvalue>
			<item setparam="true">
				<name>apikey</name>
				<param>apikey</param>
			</item>
			<item setparam="true">
				<name>secretkey</name>
				<param>secretkey</param>
			</item>
		</returnvalue>
	</command>	

<!--  VM RELATED COMMANDS -->
	<command>
		<name>deployVirtualMachine</name>
