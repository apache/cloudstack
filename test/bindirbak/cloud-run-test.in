set -e

LIBS="
commons-httpclient
commons-httpclient-3.1
commons-logging
commons-logging-1.1.1
commons-codec
commons-codec-1.3
log4j
log4j-1.2.15
cloud-test
cloud-utils
trilead-ssh2
trilead-ssh2-build213
"

JAVADIR="@JAVADIR@"
VMOPSCONF="@SYSCONFDIR@"/vmops/test
if [ "$OSTYPE" == "cygwin" ] ; then
  true
else
  set +e
  CLASSPATH=$(build-classpath $LIBS 2>/dev/null)
  set -e
  CLASSPATH="$CLASSPATH":"$VMOPSCONF"
  export CLASSPATH
fi

test="$1"
shift || true
if [ "$test" == "" ] ; then
   echo usage: $0 test.to.run \<parameters...\> > /dev/stderr
   exit 64
fi
java -cp "$CLASSPATH" com.cloud.test."$test" "$@"
