	<command>
		<name>createSnapshotPolicy</name>
		<usercommand>true</usercommand>
		<parameters>
			<item getparam="true">
				<name>volumeid</name>
				<param>volumeid</param>
			</item>
			<item>
				<name>intervaltype</name>
				<value>hourly</value>
			</item>
			<item>
				<name>schedule</name>
				<value>10</value>
			</item>
			<item>
				<name>maxsnaps</name>
				<value>4</value>
			</item>
			<item>
				<name>timezone</name>
				<value>Africa/Casablanca</value>
			</item>
		</parameters>
		<returnvalue>
			<item setparam="true">
				<name>id</name>
				<param>snapshotpolicyid</param>
			</item>
		</returnvalue>
	</command>	
	

