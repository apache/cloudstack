global_defs {
   router_id [ROUTER_ID]
}

vrrp_script heartbeat {
    script "[RROUTER_BIN_PATH]/heartbeat.sh"
    interval 5
}

vrrp_instance inside_network {
    state BACKUP
    interface eth2
    virtual_router_id 51
    nopreempt

    advert_int 1
    garp_master_delay 1
    garp_master_repeat 10
    garp_master_refresh 5

    #use_vmac
    #vmac_xmit_base

    authentication {
        auth_type AH
        auth_pass PASS
    }

    virtual_ipaddress {
        [ROUTER_IP] brd [BOARDCAST] dev eth2
    }

    track_script {
        heartbeat
    }

    notify_backup "/opt/cloud/bin/master.py --backup"
    notify_master "/opt/cloud/bin/master.py --master"
    notify_fault "/opt/cloud/bin/master.py --fault"
}
